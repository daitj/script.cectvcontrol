<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.cectvcontrol"
       name="TV Control"
       version="1.1.0"
       provider-name="themightydeity">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">CEC TV and AVR power ON and ON</summary>
        <description lang="en">Switches TV and AVR ON and ON using HDMI-CEC within Kodi, needs custom fork of Kodi, check readme of the project.</description>
        <platform>linux</platform>
        <language/>
        <license>GNU GENERAL PUBLIC LICENSE</license>
    </extension>
</addon>
